linelog {
        format = "This is a log message for %{User-Name}"
        destination = file

        file {
                filename = ${logdir}/linelog
                permissions = 0600
                escape_filenames = no
        }

        pool {
                start = 1
                min = 0
                spare = 1
                uses = 0
                retry_delay = 30
                lifetime = 0
                idle_timeout = 60
        }

        unix {
                filename = "/var/run/test.sock"
                pool {
                        start = 1
                        min = 1
                        max = 1
                        spare = 0
                        uses = 0
                        retry_delay = 30
                        lifetime = 0
                        idle_timeout = 0
                }
        }
}

linelog log_stdout {
        destination = stdout
        format = "foo"
}

linelog log_unix_sock {
        destination = unix
        format = "bar"


        unix {
                filename = "/var/run/test.sock"
                pool {
                        start = 1
                        min = 1
                        max = 1
                        spare = 0
                        uses = 0
                        retry_delay = 30
                        lifetime = 0
                        idle_timeout = 0
                }
        }
}
